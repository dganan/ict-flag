<!-- 			<property name="org.hibernate.FlushMode" value="AUTO"/> -->
<!-- 			<property name="eclipselink.persistence-context.flush-mode" value="auto" /> -->
<!-- 		</properties> -->
	</persistence-unit>
</persistence>
